<div class="flex flex-col min-h-screen bg-gray-50">
  <%= render "shared/header/login_header" %>

  <div class="px-8 md:pl-[calc(288px+2rem)] md:pr-8">
    <div class="max-w-4xl mx-auto w-full">
      <%# ユーザー情報セクション %>
      <div class="bg-white shadow rounded-xl p-6 md:p-8 mt-8">
        <div class="flex flex-col md:flex-row items-center gap-6">
          <div class="w-20 h-20 rounded-full bg-gray-100 flex-shrink-0 overflow-hidden">
            <%= image_tag @user.profile_image_url.present? ? @user.profile_image_url.url : 'sample_icon1.svg',
                class: "w-full h-full object-cover" %>
          </div>
          <div class="flex-grow text-center md:text-left">
            <h2 class="text-xl font-bold"><%= @user.username %></h2>
            <%= link_to "プロフィールを見る", @user, class: "text-blue-600 hover:text-blue-700 text-sm mt-2 inline-block" %>
          </div>
        </div>
      </div>

      <%# フォロー/フォロワー一覧 %>
      <div class="bg-white shadow rounded-xl p-6 md:p-8 mt-8">
        <h3 class="text-xl font-bold mb-6"><%= @title %></h3>
        <% if @users.any? %>
          <div class="grid gap-4">
            <% @users.each do |user| %>
              <%= link_to user_path(user), class: "flex items-center gap-4 p-4 hover:bg-gray-50 rounded-lg transition-colors duration-200" do %>
                <div class="w-12 h-12 rounded-full bg-gray-100 flex-shrink-0 overflow-hidden">
                  <%= image_tag user.profile_image_url.present? ? user.profile_image_url.url : 'sample_icon1.svg',
                      class: "w-full h-full object-cover" %>
                </div>
                <div>
                  <h4 class="font-semibold"><%= user.username %></h4>
                  <p class="text-sm text-gray-500">@<%= user.uid %></p>
                </div>
              <% end %>
            <% end %>
          </div>
          <div class="mt-6">
            <%= paginate @users %>
          </div>
        <% else %>
          <p class="text-center text-gray-500 py-8"><%= @title %>のユーザーはいません</p>
        <% end %>
      </div>
    </div>
  </div>

  <%= render "shared/footer/login_footer" %>
</div>
