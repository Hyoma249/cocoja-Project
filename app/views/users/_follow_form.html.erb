<div class="follow-form">
<% unless current_user == @user %>
  <%= turbo_frame_tag "follow_form" do %>
    <% if current_user.following?(@user) %>
      <%= button_to user_relationships_path(@user), method: :delete,
        class: "mt-4 w-full md:w-auto px-6 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 rounded-full transition-all duration-200 flex items-center justify-center gap-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        フォロー中
      <% end %>
    <% else %>
      <%= button_to user_relationships_path(@user), method: :post,
        class: "mt-4 w-full md:w-auto px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-full transition-all duration-200 flex items-center justify-center gap-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z" />
        </svg>
        フォローする
      <% end %>
    <% end %>
  <% end %>
<% end %>
</div>
