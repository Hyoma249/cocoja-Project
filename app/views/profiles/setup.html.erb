<div class="min-h-screen flex flex-col items-center pt-10 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full rounded-xl flex flex-col flex-grow">
    <%= image_tag "cocoja_logo.svg", class: "h-[4.5rem] w-auto mx-auto mb-4", alt: "ココジャ" %>
    <h2 class="text-center text-[20px] font-bold text-gray-900 mb-8">
      ご登録ありがとうございます<br>
      <span class="text-sm text-gray-600">
        ユーザー名とユーザーIDを登録して<br>
        ココじゃをはじめよう！
      </span>
    </h2>

    <%= form_with(model: @user,
            url: profile_update_path,
            method: :patch,
            local: true) do |f| %>

      <%= render "shared/error_messages", resource: @user %>

      <div class="space-y-6">
        <div>
          <%= f.label :username, "ユーザー名", class: 'block text-sm font-medium text-gray-700 mb-2' %>
          <%= f.text_field :username,
              class: "w-full px-4 py-3 rounded-lg border transition duration-150 ease-in-out",
              placeholder: 'ニックネーム' %>
        </div>

        <div>
          <%= f.label :uid, 'ユーザーID（半角英数字）', class: 'block text-sm font-medium text-gray-700 mb-2' %>
          <%= f.text_field :uid,
              class: "w-full px-4 py-3 rounded-lg border transition duration-150 ease-in-out",
              placeholder: '例: cocoja123' %>
        </div>

        <div class="flex justify-center">
          <%= f.submit 'はじめる',
              class: 'w-[240px] bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-full transition duration-150 ease-in-out transform hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2' %>
        </div>
      </div>
    <% end %>
  </div>
  <!-- Footer -->
  <%= render "shared/footer/guest_footer" %>
</div>