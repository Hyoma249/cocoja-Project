<!-- Header -->
<header class="bg-white p-4 flex justify-between items-center sticky top-0 shadow-sm z-[9999] md:hidden">
  <h1>
    <%= link_to root_path do %>
      <%= image_tag "cocoja_logo.svg", class: "h-[4.5rem] w-[120px]", alt: "ココジャ" %>
    <% end %>
  </h1>
  <div class="flex gap-2">
    <%= link_to "ログイン", new_user_session_path, class: "text-[72%] font-bold px-4 py-2 text-blue-600 border border-blue-600 rounded-full hover:bg-blue-50" %>
    <%= link_to "新規登録", new_user_registration_path, class: "text-[72%] font-bold px-4 py-2 bg-blue-600 text-white rounded-full hover:bg-blue-700" %>
  </div>
</header>

<%# PC用サイドバー %>
<div class="hidden md:flex fixed left-0 top-0 h-screen w-72 bg-white border-r z-[9999]">
  <nav class="flex-1 flex flex-col p-6">
    <%# ロゴ部分 %>
    <div class="mb-8">
      <%= link_to root_path do %>
        <%= image_tag "cocoja_logo.svg", class: "w-32 h-auto", alt: "ココジャ" %>
      <% end %>
    </div>

    <%# ログインボタン %>
    <div class="flex flex-col gap-3">
      <%= link_to "ログイン", new_user_session_path,
          class: "w-full text-center font-bold px-4 py-3 text-blue-600 border border-blue-600 rounded-full hover:bg-blue-50" %>
      <%= link_to "新規登録", new_user_registration_path, 
          class: "w-full text-center font-bold px-4 py-3 bg-blue-600 text-white rounded-full hover:bg-blue-700" %>
    </div>
  </nav>
</div>

<%# メインコンテンツのパディング調整用 %>
<div class="hidden md:block md:w-72"></div>

<%# メインコンテンツのパディング調整用 %>
<div class="md:ml-80">
  <%= yield %>
</div>