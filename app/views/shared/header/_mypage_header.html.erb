<%# スマホ用ヘッダー（md:hidden） %>
<header class="bg-white shadow md:hidden">
  <nav class="px-4 py-4">
    <div class="flex justify-between items-center">
      <h1 class="font-semibold text-[20px]"><%= current_user.uid %></h1>
      <button class="text-gray-600 hover:text-gray-900" id="menu-button">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
  </nav>
</header>

<%# PC用サイドバー（hidden md:block） %>
<div class="hidden md:block fixed left-0 top-0 h-full w-60 bg-white shadow">
  <nav class="flex flex-col p-6 h-full ml-3">
    <h1>ユーザーID</h1>
    <ul class="flex flex-col space-y-6">
      <p>ハンバーガーメニュー</p>
    </ul>
  </nav>
</div>

<%# メインコンテンツのパディング調整用 %>
<div class="md:ml-80">
  <%= yield %>
</div>
