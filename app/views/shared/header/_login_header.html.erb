<%# スマホ用ヘッダー %>
<header class="bg-white shadow md:hidden z-[9999]">
  <nav class="px-4 py-2">
    <div class="font-noto-sans-jp font-bold">
      <%= image_tag "cocoja_logo.svg", class: "h-[4rem] w-auto" %>
    </div>
  </nav>
</header>

<%# PC用サイドバー %>
<div class="hidden md:flex fixed left-0 top-0 h-screen w-72 bg-white border-r z-50">
  <nav class="flex-1 flex flex-col p-6 overflow-y-auto">
    <%# ロゴ部分 %>
    <div class="mb-8">
      <%= image_tag "cocoja_logo.svg", class: "w-32 h-auto" %>
      <p class="text-gray-500 mt-1">@<%= current_user.uid %></p>
    </div>

    <%# メインナビゲーション %>
    <div class="flex-1 flex flex-col gap-2">
      <%= link_to posts_path, class: "flex items-center gap-3 px-4 py-2.5 rounded-lg hover:bg-gray-50 text-gray-700" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
        <span>ホーム</span>
      <% end %>
      <%= link_to rankings_path, class: "flex items-center gap-3 px-4 py-2.5 rounded-lg hover:bg-gray-50 text-gray-700" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-bar-chart"><line x1="12" x2="12" y1="20" y2="10"/><line x1="18" x2="18" y1="20" y2="4"/><line x1="6" x2="6" y1="20" y2="16"/></svg>
        <span>ランキング</span>
      <% end %>
      <%= link_to new_post_path, class: "flex items-center gap-3 px-4 py-2.5 rounded-lg hover:bg-gray-50 text-gray-700" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-plus-square"><rect width="18" height="18" x="3" y="3" rx="2"/><path d="M8 12h8"/><path d="M12 8v8"/></svg>
        <span>投稿作成</span>
      <% end %>
      <%= link_to mypage_path, class: "flex items-center gap-3 px-4 py-2.5 rounded-lg hover:bg-gray-50 text-gray-700" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-user"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
        <span>マイページ</span>
      <% end %>
    </div>

    <%# 設定リンク %>
    <div class="border-t pt-4">
      <%= link_to settings_index_path, class: "flex items-center gap-3 px-4 py-2.5 rounded-lg hover:bg-gray-50 text-gray-700" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"/><circle cx="12" cy="12" r="3"/></svg>
        <span>設定</span>
      <% end %>
    </div>
  </nav>
</div>

<%# メインコンテンツのパディング調整用 %>
<div class="hidden md:block md:w-72"></div>
