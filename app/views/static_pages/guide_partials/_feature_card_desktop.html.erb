<div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 md:w-1/3">
  <div class="flex items-center gap-3 mb-4">
    <div class="<%= feature_icon_class %> p-3 rounded-full flex-shrink-0">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
        <path stroke-linecap="round" stroke-linejoin="round" d="<%= feature_icon_path %>" />
      </svg>
    </div>
    <h2 class="text-xl font-bold text-blue-600 flex items-center gap-2">
      <span class="bg-blue-100 text-blue-600 px-2 py-1 rounded text-sm"><%= feature_number %></span>
      <%= feature_name %>
    </h2>
  </div>

  <p class="mb-4 text-gray-700 text-base"><%= feature_desc %></p>

  <div class="mb-4">
    <h3 class="font-bold text-gray-700 mb-2 flex items-center">
      <span class="bg-blue-100 text-blue-600 px-2 py-1 rounded-full text-xs mr-2">使い方</span>
    </h3>
    <ul class="list-disc pl-5 space-y-1 text-sm text-gray-600">
      <% feature_steps.each do |step| %>
        <% if step.starts_with?('※') %>
          <p class="text-orange-600 font-medium text-xs"><%= step %></p>
        <% else %>
          <li><%= step %></li>
        <% end %>
      <% end %>
    </ul>
  </div>

  <div>
    <h3 class="font-bold text-gray-700 mb-2 flex items-center">
      <span class="bg-green-100 text-green-600 px-2 py-1 rounded-full text-xs mr-2">こんなときに便利</span>
    </h3>
    <div class="bg-gray-50 p-3 rounded-lg space-y-2">
      <% feature_cases.each_with_index do |feature_case, index| %>
        <div class="flex items-start gap-2">
          <span class="bg-blue-500 text-white px-2 py-1 rounded text-xs flex-shrink-0">CASE <%= index + 1 %></span>
          <p class="text-sm text-gray-600"><span class="font-medium"><%= feature_case[:title] %></span>→<%= feature_case[:desc] %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
