<!-- 投稿作成ページ全体のコンテナ -->
<div class="min-h-screen bg-gray-50 flex flex-col pb-16">
  <!-- ヘッダー -->
  <header class="bg-white py-4 border-b">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between">
        <button class="text-gray-600" onclick="history.back()">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </button>
        <h1 class="text-lg font-bold text-center text-blue-600">新規投稿作成</h1>
        <div class="w-6"></div><!-- 左右のバランスを取るための空div -->
      </div>
    </div>
  </header>

  <!-- メインコンテンツ - 投稿フォーム -->
  <main class="flex-grow container mx-auto px-4 py-6">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-sm overflow-hidden">
      <form class="p-6">
        <!-- 都道府県選択 -->
        <div class="mb-6">
          <label for="prefecture" class="block text-sm font-medium text-gray-700 mb-2">都道府県を選択 <span class="text-red-500">*</span></label>
          <div class="relative">
            <select id="prefecture" name="prefecture" class="block w-full pl-3 pr-10 py-3 text-base border border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 rounded-md appearance-none">
              <option value="" selected disabled>都道府県を選択してください</option>
              <option value="hokkaido">北海道</option>
              <option value="aomori">青森県</option>
              <option value="iwate">岩手県</option>
              <!-- 他の都道府県 -->
              <option value="tokyo">東京都</option>
              <option value="kyoto">京都府</option>
              <!-- 省略 -->
              <option value="okinawa">沖縄県</option>
            </select>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
              <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </div>
          </div>
        </div>

        <!-- 写真アップロード -->
        <div class="mb-6">
          <label class="block text-sm font-medium text-gray-700 mb-2">写真アップロード <span class="text-red-500">*</span></label>
          <div class="flex flex-wrap -mx-2">
            <div class="w-1/3 px-2 mb-4">
              <div class="border-2 border-dashed border-gray-300 rounded-md p-6 flex flex-col items-center justify-center bg-gray-50 hover:bg-gray-100 cursor-pointer transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                <span class="text-xs text-gray-500 mt-2">追加</span>
              </div>
            </div>
            <div class="w-1/3 px-2 mb-4">
              <div class="relative">
                <img src="/api/placeholder/120/120" class="w-full h-auto rounded-md object-cover aspect-square">
              </div>
            </div>
          </div>
          <p class="text-sm text-gray-500">最大5枚までアップロードできます</p>
        </div>

        <!-- 投稿内容入力 -->
        <div class="mb-6">
          <label for="content" class="block text-sm font-medium text-gray-700 mb-2">投稿内容 <span class="text-red-500">*</span></label>
          <textarea id="content" name="content" rows="5" placeholder="あなたの体験や感想を自由に書いてください" class="block w-full px-3 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"></textarea>
        </div>

        <!-- タグ入力 -->
        <div class="mb-6">
          <label for="tags" class="block text-sm font-medium text-gray-700 mb-2">ハッシュタグ <span class="text-red-500">*</span></label>
          <div class="flex flex-wrap -mx-2">
            <div class="w-full px-2 mb-4">
              <input type="text" id="tags" name="tags" placeholder="タグを入力" class="block w-full px-3 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
            </div>
          </div>
        </div>

        <!-- 投稿ボタン -->
        <div class="flex flex-col space-y-4">
          <button type="submit" class="w-full bg-blue-600 text-white py-3 px-6 rounded-full font-bold transition-all duration-200 hover:bg-blue-700 active:scale-95 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2">
            投稿する
          </button>
        </div>
      </form>
    </div>
  </main>

  <!-- フッター -->
  <%= render "shared/footer/login_footer" %>
</div>