<!DOCTYPE html>
<html>
  <head>
    <%= display_meta_tags %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="<%= asset_path 'cocoja-icon.png' %>" type="image/png">
    <link rel="icon" href="<%= asset_path 'cocoja-icon.png' %>" type="image/svg+xml">
    <link rel="apple-touch-icon" href="<%= asset_path 'cocoja-icon.png' %>">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body class="bg-gray-50">
    <!-- フラッシュメッセージ -->
    <% if notice.present? || alert.present? %>
      <div class="fixed top-4 left-1/2 transform -translate-x-1/2 w-full max-w-md z-[99999] px-4">
        <% if notice.present? %>
          <div data-controller="flash"
               class="bg-green-50 text-green-700 p-4 rounded-lg mb-4 shadow-lg transition-all duration-150 ease-in-out">
            <%= notice %>
          </div>
        <% end %>
        <% if alert.present? %>
          <div data-controller="flash"
               class="bg-red-50 text-red-700 p-4 rounded-lg mb-4 shadow-lg transition-all duration-150 ease-in-out">
            <%= alert %>
          </div>
        <% end %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
