#!/bin/bash -e

# master keyの存在確認を追加
if [ -z "$RAILS_MASTER_KEY" ]; then
    echo "Error: RAILS_MASTER_KEY is not set"
    exit 1
fi

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# Verify Rails environment variables
if [ "$RAILS_ENV" = "production" ]; then
    if [ -z "$RAILS_MASTER_KEY" ]; then
        echo "Error: RAILS_MASTER_KEY is not set in production"
        exit 1
    fi
fi

# If running the rails server then create or migrate existing database
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
    # Verify database connection before running prepare
    echo "Checking database connection..."
    ./bin/rails db:version || true
    echo "Running database prepare..."
    ./bin/rails db:prepare
fi

exec "${@}"